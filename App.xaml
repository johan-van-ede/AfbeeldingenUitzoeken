<Application x:Class="AfbeeldingenUitzoeken.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AfbeeldingenUitzoeken">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/ThemeResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Add application icon using built-in WPF icon -->
            <DrawingImage x:Key="AppIcon">
                <DrawingImage.Drawing>
                    <DrawingGroup>
                        <DrawingGroup.Children>                            <GeometryDrawing Brush="#FFE5E5E5" Geometry="F1 M 0,0 L 48,0 L 48,48 L 0,48 L 0,0 Z" />
                            <GeometryDrawing Brush="{StaticResource ThemeInfo}">
                                <GeometryDrawing.Geometry>
                                    <PathGeometry FillRule="Nonzero" Figures="M40,12H20L16,8H8C5.79,8 4,9.79 4,12V36C4,38.21 5.79,40 8,40H40C42.21,40 44,38.21 44,36V16C44,13.79 42.21,12 40,12 Z M40,36H8V12H14.83L18.83,16H40V36 Z M24,26L28,32L34,24L42,34H14L24,26 Z" />
                                </GeometryDrawing.Geometry>
                            </GeometryDrawing>
                        </DrawingGroup.Children>
                    </DrawingGroup>
                </DrawingImage.Drawing>
            </DrawingImage>
        </ResourceDictionary>
    </Application.Resources>
</Application>
